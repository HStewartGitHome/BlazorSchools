<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Blazor Schools</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="schooldata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Schools
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="schoolvirtual">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Schools Virtual
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="schoolpagedata">
                <span class="oi oi-book" aria-hidden="true"></span> Schools Pages
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="perfdata">
                <span class="oi oi-pulse" aria-hidden="true"></span> Performance
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
