            <TextBlock x:Name="textPageList14" Text=" This is List 14 content" TextWrapping="Wrap" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left" Background="White"  FontSize="24" FontFamily="Courier New" Visibility="Visible" Margin="32,0,40,0" Width="1000" Height="36"/>
            <TextBlock x:Name="textPageList15" Text=" This is List 15 content" TextWrapping="Wrap" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Left" Background="LightGray"  FontSize="24" FontFamily="Courier New" Visibility="Visible" Margin="32,0,40,0" Width="1000" Height="36"/>
        </StackPanel>
	</Grid>
</Window>
